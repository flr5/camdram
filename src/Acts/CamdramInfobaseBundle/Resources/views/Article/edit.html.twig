{% extends 'ActsCamdramBundle::layout.html.twig' %}

{% set current_navigation_id = 'infobase' %}
{% block title %}Edit: {{ form.vars.value.name }} - Infobase{% endblock %}

{% block body %}
<h2>Infobase</h2>

<div class="row">
    <div class="large-12 columns">
        <h3>Edit Article</h3>

        <form action="{{ path('put_article', {slug: form.vars.value.slug, _method: 'put'}) }}" method="post">
            {{ include('ActsCamdramInfobaseBundle:Article:form.html.twig') }}

            <div class="text-right">
                <input type="submit" value="Save" class="button"/>
            </div>
        </form>

    </div>
</div>
{% endblock %}
